<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
		controllerName="view.Master" xmlns:html="http://www.w3.org/1999/xhtml">
		<l:Grid
    defaultSpan="L12 M12 S12"
    width="auto">
    <l:content>
      <f:SimpleForm id="FormDatoMedida"
        minWidth="1024"
        maxContainerCols="2"
        editable="true"
        layout="ResponsiveGridLayout"
        title="{i18n>datosMedida}"
        labelSpanL="3"
        labelSpanM="3"
        emptySpanL="4"
        emptySpanM="4"
        columnsL="1"
        columnsM="1"
        class="editableForm">
        <f:content>
          <Label text="{i18n>PERNR}" />
          <Input value="{PERNR}" />
          <Label text="{i18n>MASSG}" />
          <Select width="100%">
            <items>
              <core:Item text="Expansion" />
              <core:Item text="Substitution of workplaces" />
              <core:Item text="Re-entry temporary suspension" />
              <core:Item text="Department reorganisation" />
            </items>
          </Select>
        </f:content>
      </f:SimpleForm>
      <f:SimpleForm id="FormOrganizationalAssignment"
        minWidth="1024"
        maxContainerCols="2"
        editable="true"
        layout="ResponsiveGridLayout"
        title="{i18n>ORG_ASSIGNMENT}"
        labelSpanL="3"
        labelSpanM="3"
        emptySpanL="4"
        emptySpanM="4"
        columnsL="1"
        columnsM="1"
        class="editableForm">
        <f:content>
          <Label text="{i18n>PLANS}" />
          <Input id="PlansInput"
        type="Text"
        placeholder="Enter Position ..." 
        showSuggestion="true"
        showValueHelp="true"
        valueHelpRequest="handleValueHelpPositions" /> 
        <Label text="{i18n>PERSA}" />
          <Input id="PersaInput"
        type="Text"
        placeholder="Enter Div. Personal ..." 
        showSuggestion="true"
        showValueHelp="true"
        valueHelpRequest="handleValueHelpPersonnelArea" /> 
        <Label text="{i18n>PERSG}" />
          <Input id="PersgInput"
        type="Text"
        placeholder="Enter Group Personal ..." 
        showSuggestion="true"
        showValueHelp="true"
        valueHelpRequest="handleValueHelpPersonnelGroup" />
        </f:content>
      </f:SimpleForm>	
    </l:content>
      <Panel>
    <headerToolbar>
      <Toolbar height="3rem">
        <Title text="Basic Pay"/>
        <ToolbarSpacer />
        <Button icon="sap-icon://add" />
      </Toolbar>
    </headerToolbar>
    <content>
      <l:HorizontalLayout>
        <Image src="{img>/products/pic1}" densityAware="false" width="10em" />
      </l:HorizontalLayout>
