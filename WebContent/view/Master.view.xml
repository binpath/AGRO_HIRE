<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
		controllerName="view.Master" xmlns:html="http://www.w3.org/1999/xhtml">
		<l:Grid
    defaultSpan="L12 M12 S12"
    width="auto">
    <l:content>
      <f:SimpleForm id="FormDatoMedida"
        minWidth="1024"
        maxContainerCols="2"
        editable="true"
        layout="ResponsiveGridLayout"
        title="{i18n>datosMedida}"
        labelSpanL="3"
        labelSpanM="3"
        emptySpanL="4"
        emptySpanM="4"
        columnsL="1"
        columnsM="1"
        class="editableForm">
        <f:content>
          <Label text="{i18n>PERNR}" />
          <Input value="{PERNR}" />
          <Label text="{i18n>MASSG}" />
          <Select width="100%">
            <items>
              <core:Item text="Expansion" />
              <core:Item text="Substitution of workplaces" />
              <core:Item text="Re-entry temporary suspension" />
              <core:Item text="Department reorganisation" />
            </items>
          </Select>
        </f:content>
      </f:SimpleForm>
      <f:SimpleForm id="FormOrganizationalAssignment"
        minWidth="1024"
        maxContainerCols="2"
        editable="true"
        layout="ResponsiveGridLayout"
        title="{i18n>ORG_ASSIGNMENT}"
        labelSpanL="3"
        labelSpanM="3"
        emptySpanL="4"
        emptySpanM="4"
        columnsL="1"
        columnsM="1"
        class="editableForm">
        <f:content>
          <Label text="{i18n>PLANS}" />
          <Input value="{PLANS}" />
        </f:content>
      </f:SimpleForm>
    </l:content>
  </l:Grid>
</core:View>